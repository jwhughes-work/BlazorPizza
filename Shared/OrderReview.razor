@foreach (var pizza in Order.Pizzas)
{
    <p>
        <strong>
            @(pizza.Size)"
            @pizza.Special.Name
            <span style="color: red">(£@pizza.GetFormattedTotalPrice())</span>
        </strong>
    </p>
}

<p>
    <strong style="color: red">
        Total price:
        £@Order.GetFormattedTotalPrice()
    </strong>
</p>

@code {
    [Parameter] public Order Order { get; set; }
}